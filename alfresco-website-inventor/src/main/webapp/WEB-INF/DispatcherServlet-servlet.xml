    <mvc:resources mapping="/resource/**" location="/WEB-INF/resources/" />

    <bean class="it.alfrescoinaction.lab.awsi.service.AlfrescoRemoteConnection" init-method="openSession">
        <property name="username" value="${alf.username}"/>
        <property name="password" value="${alf.password}"/>
